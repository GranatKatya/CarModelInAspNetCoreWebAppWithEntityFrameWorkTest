@page
@model CarModelInAspNetCoreWebAppWithEntityFrameWorkTest.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Car.Producer" class="control-label"></label>
                <input asp-for="Car.Producer" class="form-control" />
                <span asp-validation-for="Car.Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.EnginePower" class="control-label"></label>
                <input asp-for="Car.EnginePower" class="form-control" />
                <span asp-validation-for="Car.EnginePower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.EngineType" class="control-label"></label>
                <input asp-for="Car.EngineType" class="form-control" />
                <span asp-validation-for="Car.EngineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.NumberOfCylinders" class="control-label"></label>
                <input asp-for="Car.NumberOfCylinders" class="form-control" />
                <span asp-validation-for="Car.NumberOfCylinders" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Color" class="control-label"></label>
                <input asp-for="Car.Color" class="form-control" />
                <span asp-validation-for="Car.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.DateOfCreating" class="control-label"></label>
                <input asp-for="Car.DateOfCreating" class="form-control" />
                <span asp-validation-for="Car.DateOfCreating" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Car.Availability" /> @Html.DisplayNameFor(model => model.Car.Availability)
                </label>
            </div>
            <dl>
                <dt>
                    <label asp-for="Car.PhotoToUpdate"></label>
                </dt>
                <dd>
                    <input asp-for="Car.PhotoToUpdate" type="file">
                </dd>
            </dl>
            <div class="form-group">
                <label asp-for="Car.PhotoToDisplay" class="control-label"></label>
                <td><img src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Car.PhotoToDisplay)" /></td>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
